<?xml version='1.0' encoding='utf-8'?>
<addons><addon id="eternityxrepo" name="Eternity x repo" version="1.0.0" provider-name="CasX">
    <extension point="xbmc.addon.repository" name="Eternity Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/CasX61/eternityxrepo/master/repo/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/CasX61/eternityxrepo/master/repo/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/CasX61/eternityxrepo/master/repo/zips/</datadir>
        </dir>
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/Gujal00/smrzips/master/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/Gujal00/smrzips/master/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/Gujal00/smrzips/master/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>eternityxrepo</summary>
        <description>Eternity x repo</description>
        <disclaimer />
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon><addon id="plugin.video.eternity" version="1.0.2" name="[B]Eternity[/B]" provider-name="CasX">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.cscrap" />
        <import addon="script.module.download-m3u8" optional="true" />
        <import addon="script.module.six" />
        <import addon="script.module.pyaes" />
        <import addon="script.module.infotagger" />
        <import addon="script.module.resolveurl" version="5.1.100" />
        
        <import addon="script.module.pydevd" optional="true" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="startup" />
    <extension point="kodi.context.item">
        <menu id="kodi.core.main">
            <item library="resources/lib/context/traktManager.py">
                <label>Trakt Manager</label>
                <visible>String.StartsWith(ListItem.path,plugin://plugin.video.eternity/) + [String.IsEqual(ListItem.dbtype,episode) | String.IsEqual(ListItem.dbtype,tvshow) | String.IsEqual(ListItem.dbtype,season) | String.IsEqual(ListItem.dbtype,movie)]</visible>
            </item>
            <item library="resources/lib/context/addtoLibrary.py">
                <label>Zur Bibliothek hinzufügen</label>
                <visible>String.StartsWith(ListItem.path,plugin://plugin.video.eternity/) + [String.IsEqual(ListItem.dbtype,tvshow) | String.IsEqual(ListItem.dbtype,movie)]</visible>
            </item>
        </menu>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="de_DE">Eternity: Streaming bis in die Ewigkeit</summary>
        <summary lang="en_GB">Eternity: Streaming till Eternity</summary>
        <news>
[B]v1.0.2 - 02.01.2026[/B]
===================

-- NEU Primekiste Scraper hinzugefügt
-- FIX Trakt Resume: Videos starten jetzt an gespeicherter Position
        </news>
        <assets>
			<icon>resources/icon.png</icon>
			<fanart>resources/fanart.jpg</fanart>
			<banner>resources/media/banner.png</banner>
		</assets>
    </extension>
</addon><addon id="script.module.cscrap" version="1.0.0" name="cscrap" provider-name="CasX">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
    </requires>
    <extension point="xbmc.python.module" library="lib" />
    <extension point="xbmc.python.pluginsource" library="lib" />
    <extension point="xbmc.addon.metadata">
        <summary lang="de_DE">cscrap</summary>
        <summary lang="en_GB">cscrap</summary>
        <assets>
			<icon />
			<fanart />
			<banner />
		</assets>
    </extension>
</addon></addons>