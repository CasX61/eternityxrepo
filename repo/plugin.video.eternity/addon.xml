<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.eternity" version="1.0.1" name="[B]Eternity[/B]" provider-name="CasX">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests"/>
        <import addon="script.module.cscrap"/>
        <import addon="script.module.download-m3u8" optional="true"/>
        <import addon="script.module.six"/>
        <import addon="script.module.pyaes"/>
        <import addon="script.module.infotagger"/>
        <import addon="script.module.resolveurl" version="5.1.100"/>
        <!-- for remote debug -->
        <import addon="script.module.pydevd" optional="true"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="startup" />
    <extension point="kodi.context.item">
        <menu id="kodi.core.main">
            <item library="resources/lib/context/traktManager.py">
                <label>Trakt Manager</label>
                <visible>String.StartsWith(ListItem.path,plugin://plugin.video.eternity/) + [String.IsEqual(ListItem.dbtype,episode) | String.IsEqual(ListItem.dbtype,tvshow) | String.IsEqual(ListItem.dbtype,season) | String.IsEqual(ListItem.dbtype,movie)]</visible>
            </item>
            <item library="resources/lib/context/addtoLibrary.py">
                <label>Zur Bibliothek hinzuf√ºgen</label>
                <visible>String.StartsWith(ListItem.path,plugin://plugin.video.eternity/) + [String.IsEqual(ListItem.dbtype,tvshow) | String.IsEqual(ListItem.dbtype,movie)]</visible>
            </item>
        </menu>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="de_DE">Eternity: Streaming bis in die Ewigkeit</summary>
        <summary lang="en_GB">Eternity: Streaming till Eternity</summary>
        <news>
[B]v1.0.1 - 25.11.2025[/B]
===================

-- FIX Trakt Funktionen
-- FIX Gesehen/Ungesehen Status
        </news>
        <assets>
			<icon>resources/icon.png</icon>
			<fanart>resources/fanart.jpg</fanart>
			<banner>resources/media/banner.png</banner>
		</assets>
    </extension>
</addon>
